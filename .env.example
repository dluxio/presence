# DLUX Presence Enhanced Configuration

# Database connections
DB_PRIMARY_HOST=data.dlux.io
DB_PRIMARY_PORT=5432
DB_PRIMARY_NAME=postgres
DB_PRIMARY_USER=presence_readwrite
DB_PRIMARY_PASSWORD=your_secure_primary_password

# Local replica database  
DB_REPLICA_HOST=db_replica
DB_REPLICA_PORT=5432
DB_REPLICA_NAME=dlux_presence
DB_REPLICA_USER=replica_user
DB_REPLICA_PASSWORD=your_secure_replica_password

# Redis for caching and real-time features
REDIS_HOST=redis
REDIS_PORT=6379

# TURN server secret (must match data.dlux.io)
TURN_SECRET=your_turn_secret_key_2024

# DLUX API for sync
DLUX_API_URL=https://data.dlux.io

# Node environment
NODE_ENV=production
PORT=3000

# Hive blockchain node
HIVE_NODE=https://api.hive.blog
